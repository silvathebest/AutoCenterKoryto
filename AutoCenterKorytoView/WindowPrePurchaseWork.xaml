<Window x:Class="AutoCenterKorytoView.WindowPrePurchaseWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCenterKorytoView"
        mc:Ignorable="d"
        Title="Формирование предпродажной работы" Height="344.811" Width="450" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Bottom" Height="270" Margin="-4,0,4,1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="1" Content="Тип" FontSize="14" Margin="10,5"></Label>
            <TextBox x:Name="textBoxType" Grid.Row="1" Grid.Column="1" FontSize="14" Margin="5"></TextBox>
            <Label Grid.Row="2" Content="Название" FontSize="14" Margin="10,5"></Label>
            <TextBox x:Name="textBoxName" Grid.Row="2" Grid.Column="1" FontSize="14" Margin="5"></TextBox>
            <Label Grid.Row="3" Content="Цена" FontSize="14" Margin="10,5"></Label>
            <TextBox x:Name="textBoxPrice" Grid.Row="3" Grid.Column="1" FontSize="14" Margin="5"></TextBox>
            <Label Grid.Row="4" Content="Срок выполнения" FontSize="14" Margin="10,5"></Label>
            <TextBox x:Name="textBoxDeadlineTime" Grid.Row="4" Grid.Column="1" FontSize="14" Margin="5"></TextBox>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="244,0,0,0">
            <Button x:Name="ButtonSave" Content="Сохранить" Width="80" Margin="10" Click="ButtonSave_Click"/>
            <Button x:Name="ButtonCancel" Content="Отмена" Width="80" Margin="10" Click="ButtonCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
